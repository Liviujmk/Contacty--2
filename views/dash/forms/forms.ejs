<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All forms</title>
    <%- include('../../layouts/publicFiles') %>
</head>
<body>
    <%- include('../../layouts/sidebar') %>
    <section class="home-section">
        <section class="dash-main section">
          <div class="main-content overflow-y--scroll">
            <% if(forms.length === 0) { %>
              <%- include('../../layouts/dashboard/noForm') %>       
            <% } else { %>
            <div class="content-grid">
              <div class="container full-width">
                <div class="container-grid">
                  <div class="container-content">
                    <h3>See all your forms, or <a href="/<%= user.username %>/dashboard/forms/new">Create one</a></h3>
                    <br>
                    <% forms.forEach((form) => { %>
                      <p><a href="/<%= user.username %>/dashboard/forms/view/<%= form.title %>"><%= form.title%></a></p>
                    <% }) %>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </section>
    </section>
</body>
</html>
