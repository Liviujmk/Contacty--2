<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All messages</title>
    <%- include('../../layouts/publicFiles') %>
</head>
<body>
  <%- include('../../layouts/sidebar') %>
  <section class="home-section">
    <section class="dash-main section">
      <div class="main-content overflow-y--scroll">
        <% if(allCustomers.length === 0) { %>
          <%- include('../../layouts/dashboard/noForm') %>       
        <% } else { %>
        <div class="content-grid">
          <div class="container full-width">
            <div class="container-grid">
              <div class="container-content">
                <div class="page-heading">
                  <h2>All your customers</h2>
                </div>
                <div class="table customers">
                    <div class="row table-heading">
                      <div class="row-column fifth-width">
                        <span>Customer Name</span>
                      </div>
                      <div class="row-column fifth-width">
                        <span>Email</span>
                      </div>
                    </div>
                    <% allCustomers.forEach(customer => { %>
                      <div class="row row-caption">
                        <div class="row-column fifth-width">
                          <span><%= customer.name %></span>
                        </div>
                        <div class="row-column fifth-width">
                          <span><%= customer.email %></span>
                        </div>
                      </div>
                    <% }); %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </section>
</section>
</body>
</html>