<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All messages</title>
    <%- include('../../layouts/publicFiles') %>
</head>
<body>
  <%- include('../../layouts/sidebar') %>
  <section class="home-section">
    <section class="dash-main section">
      <div class="main-content overflow-y--scroll">
        <% if(allMessages.length === 0) { %>
          <%- include('../../layouts/dashboard/noForm') %>       
        <% } else { %>
        <div class="content-grid">
          <div class="container full-width">
            <div class="container-grid">
              <div class="container-content">
                <div class="page-heading">
                  <h2>All your messages</h2>
                  <span title="Messages left"><%= allMessages.length %>/<%= user.plan.messagesNr %> </span>
                  <a href="<%= createLink %> " class="button btn-icon btn-create btn-main">
                    <span class="material-symbols-outlined icon">add</span>
                    <span class="btn-text">Create</span>
                  </a>
                </div>
                <div class="table">
                    <div class="row table-heading">
                      <div class="row-column fifth-width">
                        <span>Form origin</span>
                      </div>
                      <div class="row-column fifth-width">
                        <span>Sender</span>
                      </div>
                      <div class="row-column fifth-width">
                        <span>Email</span>
                      </div>
                      <div class="row-column fifth-width">
                        <span>Created at</span>
                      </div>
                    </div>
                    <% allMessages.forEach(msg => { %>
                      <div class="row row-caption">
                        <div class="row-column fifth-width">
                          <span><%= msg.formTarget %></span>
                        </div>
                        <div class="row-column fifth-width">
                          <span><%= msg.clientSenderName %></span>
                        </div>
                        <div class="row-column fifth-width">
                          <span><%= msg.clientSenderEmail %></span>
                        </div>
                        <div class="row-column fifth-width">
                          <span><%= msg.createdAt.toLocaleDateString() %></span>
                        </div>
                        <div class="row-column">
                          <a href="/<%= user.username %>/dashboard/forms/view/<%= msg.formTarget %>/messages/<%= msg.id %>" class="button btn-icon btn-small">
                            <span class="material-symbols-outlined">
                              arrow_right
                            </span>
                            <span class="btn-text">View</span>
                          </a>
                        </div>
                      </div>
                    <% }); %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </section>
</section>
</body>
</html>